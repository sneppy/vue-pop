// Fontawesome setup
@import '~@fortawesome/fontawesome-free/css/solid.css'

.pop-notif
	width 100%
	height 100%

	position fixed
	top 0
	left 0
	z-index 10001

	pointer-events none

	.content
		display flex
		align-items center

		padding 1em

		background-color light

		pointer-events auto

		&:before
			display inline-block

			margin-right 0.5em

			font-family 'Font Awesome 5 Free'
			font-weight: 900

		/** Notification position */
		&:not(.pos-fill)
			position absolute
			z-index 1

			margin 1em

			&.pos-left
				left 0
			&.pos-center
				left 50%

				transform translateX(-50%)
			&.pos-right
				right 0
		
		&.pos-fill
			width 100%
			position absolute
		
		&.pos-top
			top 0
		&.pos-middle
			top 50%

			transform translateY(-50%)
		&.pos-bottom
			bottom 0

		/** Notification level */

		&.level-error
			background-color error
			color light

			&:before
				content '\f06a'
		
		&.level-warn
		&.level-warning
			background-color warning
			color dark

			&:before
				content '\f071'
		
		&.level-done
		&.level-success
			background-color secondary
			color light

			&:before
				content '\f00c'
		
		&.level-doneall
			background-color secondary
			color light

			&:before
				content '\f560'
		
		&.level-log
			background-color info
			color dark

			&:before
				content '\f05a'